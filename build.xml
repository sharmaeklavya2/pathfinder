<project default="default">

    <target name="clean">
        <delete>
            <fileset dir="${basedir}">
                <include name="**/*.class"/>
            </fileset>
        </delete>
    </target>

    <target name="build">
        <javac destdir="." debug="true">
            <src path="gridpanel" />
            <src path="graph" />
            <src path="planner" />
            <src path="driver" />
            <src path="util" />
        </javac>
    </target>

</project>
